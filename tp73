
#include <bits/stdc++.h>
using namespace std;

vector<int> GenerarVector(int n);
vector<int> SumarVectores(vector<int> A, vector<int> B);
void MostrarVector(vector<int> A);

int main() {
    vector<int> A, B, C;
    int N = 10; 

    A = GenerarVector(N);
    B = GenerarVector(N);
    C = SumarVectores(A, B);

    cout << "Vector A: ";
    MostrarVector(A);
    cout << "Vector B: ";
    MostrarVector(B);
    cout << "Vector C (suma de A y B): ";
    MostrarVector(C);

    return 0;
}

vector<int> GenerarVector(int n) {
    vector<int> vec;
    srand(time(NULL));
    for (int i = 0; i < n; i++) {
        int e = rand() % 1500; 
        vec.push_back(e);
    }
    return vec;
}

vector<int> SumarVectores(vector<int> A, vector<int> B) {
    vector<int> C;
    

    size_t min_length = min(A.size(), B.size());

    for (size_t i = 0; i < min_length; i++) {
        C.push_back(A[i] + B[i]);
    }
    return C;
}

void MostrarVector(vector<int> A) {
    for (size_t i = 0; i < A.size(); i++) {
        cout << A[i] << " ";
    }
    cout << endl;
}
